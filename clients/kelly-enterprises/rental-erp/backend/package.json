{
  "name": "fireproof-erp-backend",
  "version": "1.0.0",
  "description": "Modular ERP Backend - V3.33 Structure - Railway Ready",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --config=jest.config.real-database.js",
    "test:watch": "jest --config=jest.config.real-database.js --watch",
    "test:coverage": "jest --config=jest.config.real-database.js --coverage",
    "test:unit": "jest --config=jest.config.real-database.js tests/unit",
    "test:integration": "jest --config=jest.config.real-database.js tests/integration",
    "test:security": "jest --config=jest.config.real-database.js tests/security",
    "test:performance": "jest --config=jest.config.real-database.js tests/performance",
    "test:e2e": "jest --config=jest.config.real-database.js tests/e2e",
    "test:real-db": "jest --config=jest.config.real-database.js --testPathPattern=real-db",
    "test:real-db:watch": "jest --config=jest.config.real-database.js --testPathPattern=real-db --watch",
    "test:mock": "jest --config=jest.config.js",
    "test:mock:watch": "jest --config=jest.config.js --watch",
    "test:perf-report": "DB_PERF_REPORTING=true jest --config=jest.config.real-database.js",
    "test:verbose": "DB_TEST_VERBOSE=true jest --config=jest.config.real-database.js",
    "test:enhanced": "jest --config=jest.config.real-db-enhanced.js",
    "test:enhanced:watch": "jest --config=jest.config.real-db-enhanced.js --watch",
    "test:enhanced:coverage": "jest --config=jest.config.real-db-enhanced.js --coverage",
    "test:enhanced:performance": "ENABLE_PERFORMANCE_MONITORING=true jest --config=jest.config.real-db-enhanced.js",
    "verify:enhanced-setup": "node tests/verify-enhanced-setup.js",
    "test:health": "node tests/health-monitoring/run-all-tests.js",
    "test:health:basic": "node tests/health-monitoring/basic-health-check.test.js",
    "test:health:docker": "node tests/health-monitoring/docker-integration.test.js",
    "test:health:full": "node tests/health-monitoring/comprehensive-suite.test.js",
    "spec:lint": "redocly lint docs/openapi.yaml",
    "spec:validate": "swagger-cli validate docs/openapi.yaml",
    "spec:bundle": "swagger-cli bundle docs/openapi.yaml -o docs/openapi.bundle.yaml --type yaml",
    "dump:routes": "node scripts/introspect/routes.js",
    "migrate": "node scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js --status",
    "migrate:create": "node scripts/migrate.js --create",
    "verify:backend": "node scripts/verify-backend.js",
    "verify:backend:fast": "node scripts/verify-backend.js --skip performance_tests",
    "verify:backend:verbose": "node scripts/verify-backend.js --verbose",
    "ci:test": "npm run verify:backend",
    "ci:pre-commit": "npm run lint && npm run test:unit",
    "lint": "echo 'Linting completed - implement ESLint for production'",
    "format": "echo 'Code formatting completed - implement Prettier for production'",
    "security:audit": "npm audit --audit-level high",
    "build": "echo 'Build process completed - no compilation needed for Node.js'",
    "clean": "rm -rf node_modules coverage dist",
    "setup": "npm install && echo 'Backend setup completed'",
    "backup:config": "node scripts/backup-critical-config.js",
    "restore:config": "node scripts/restore-critical-config.js"
  },
  "keywords": [
    "erp",
    "backend",
    "modular",
    "gauge-tracking",
    "fireproof-erp",
    "api",
    "mysql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.1",
    "dropbox": "^10.34.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.3",
    "node-cache": "^5.1.2",
    "pdfkit": "^0.15.2",
    "redis": "^5.8.2",
    "string-similarity": "^4.0.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@redocly/cli": "^1.16.1",
    "axios": "^1.12.2",
    "chalk": "^5.4.1",
    "colors": "^1.4.0",
    "jest": "^30.0.5",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "swagger-cli": "^4.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
