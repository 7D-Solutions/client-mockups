# Database Configuration
DB_HOST=localhost
DB_PORT=3307
DB_USER=root
DB_PASS=your_database_password_here
DB_NAME=fai_db_sandbox

# Server Configuration
PORT=8000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Test Configuration (for test scripts only)
TEST_USERNAME=admin
TEST_PASSWORD=your_test_password_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
# Accepted file types: PDF, images (JPG, PNG, TIFF, BMP, GIF, WEBP), documents (DOC, DOCX), spreadsheets (XLS, XLSX), text files
ALLOWED_FILE_TYPES=jpg,jpeg,png,tiff,tif,bmp,gif,webp,pdf,doc,docx,xls,xlsx,txt
UPLOAD_TEMP_DIR=./uploads/temp

# Dropbox Configuration (for certificate storage)
# PERMANENT SOLUTION: Use refresh token (never expires)
# Get these from https://www.dropbox.com/developers/apps -> Your App -> Settings
DROPBOX_REFRESH_TOKEN=your_refresh_token_here
DROPBOX_APP_KEY=your_app_key_here
DROPBOX_APP_SECRET=your_app_secret_here

# TEMPORARY SOLUTION: Access token (expires in 4 hours)
# Only use this for testing - it will stop working after 4 hours!
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token_here

DROPBOX_ROOT_PATH=/certificates

# Monitoring Configuration (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_HEALTH_CHECKS=true

# Field Validation Configuration
# Note: As of the latest update, field validation is ALWAYS enforced
# The STRICT_FIELD_VALIDATION flag is deprecated but kept for backwards compatibility
STRICT_FIELD_VALIDATION=true