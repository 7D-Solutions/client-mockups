{
  "name": "fireproof-erp-frontend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:dev": "vite preview --host 0.0.0.0 --port $PORT",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:styles": "node scripts/generate-style-docs.js",
    "css:monitor": "node scripts/css-bundle-monitor.js",
    "build:analyze": "npm run build && npm run css:monitor",
    "quality:check": "node scripts/quality-metrics.cjs",
    "quality:regression": "node scripts/quality-regression.cjs",
    "quality:all": "npm run quality:check && npm run quality:regression",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "architecture:validate": "node scripts/architecture-validator.js",
    "architecture:validate:ci": "node scripts/architecture-validator.js --strict",
    "architecture:report": "node scripts/infrastructure-usage-report.js",
    "governance:dashboard": "node scripts/governance-dashboard.js",
    "governance:all": "npm run architecture:validate && npm run architecture:report && npm run governance:dashboard",
    "validate:all": "npm run lint && npm run architecture:validate && npm run modal:migration-report",
    "modal:migration-report": "node scripts/modal-migration-report.js",
    "migrate:imports": "node scripts/migrate-imports.js",
    "css:find-duplicates": "node scripts/find-duplicate-styles.cjs",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.86.0",
    "clsx": "^2.1.1",
    "cssnano": "^7.1.1",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.3.1",
    "postcss-purgecss": "^5.0.0",
    "purgecss": "^7.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.28.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.3.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^10.4.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "storybook": "^8.6.14",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ]
  }
}
