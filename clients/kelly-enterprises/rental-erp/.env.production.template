# Production Environment Template for Railway
# Copy to .env in Railway dashboard as environment variables

# Database Configuration (Railway auto-generates these)
DB_HOST=${{MYSQL_HOST}}
DB_PORT=${{MYSQL_PORT}}  
DB_USER=${{MYSQL_USER}}
DB_PASS=${{MYSQL_PASSWORD}}
DB_NAME=${{MYSQL_DATABASE}}
DB_CONNECTION_LIMIT=25

# Security - GENERATE STRONG SECRETS
JWT_SECRET=GENERATE_STRONG_32_CHAR_SECRET_HERE
SESSION_SECRET=GENERATE_STRONG_32_CHAR_SECRET_HERE

# CORS Configuration
ALLOWED_ORIGINS=${{FRONTEND_URL}}

# Application Configuration
NODE_ENV=production
PORT=8000