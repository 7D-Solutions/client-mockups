{
  "name": "@fireproof/erp-core",
  "version": "0.1.0",
  "description": "Core foundation modules for Fireproof ERP system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "import": "./dist/core/auth/index.js",
      "types": "./dist/core/auth/index.d.ts"
    },
    "./navigation": {
      "import": "./dist/core/navigation/index.js",
      "types": "./dist/core/navigation/index.d.ts"
    },
    "./data": {
      "import": "./dist/core/data/index.js",
      "types": "./dist/core/data/index.d.ts"
    },
    "./notifications": {
      "import": "./dist/core/notifications/index.js",
      "types": "./dist/core/notifications/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "axios": "^1.3.0",
    "axios-retry": "^4.5.0",
    "date-fns": "^2.29.3",
